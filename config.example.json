{
  "transport": {
    "type": "http",
    "port": 3000,
    "host": "127.0.0.1",
    "stateless": false,
    "auth": {
      "type": "bearer",
      "token": "your-secret-token"
    }
  },
  "defaults": {
    "maxRows": 100,
    "lazyConnection": true,
    "toolsPerDatabase": false,
    "queryTimeout": 30000
  },
  "databases": [
    {
      "id": "main_pg",
      "type": "postgresql",
      "host": "localhost",
      "port": 5432,
      "database": "myapp",
      "user": "admin",
      "password": "secret123",
      "ssl": true,
      "sslCa": "/path/to/ca-certificate.pem",
      "description": "Main PostgreSQL (host-based)",
      "lazyConnection": true,
      "maxRows": 200
    },
    {
      "id": "main_pg_connstr",
      "type": "postgresql",
      "connectionString": "postgresql://admin:secret123@localhost:5432/myapp?sslmode=require",
      "description": "Main PostgreSQL (connection string)"
    },
    {
      "id": "analytics",
      "type": "clickhouse",
      "url": "https://localhost:8443",
      "database": "analytics",
      "user": "default",
      "password": "",
      "tls": {
        "ca": "/path/to/ca-certificate.pem",
        "rejectUnauthorized": true
      },
      "description": "ClickHouse analytics with TLS"
    }
  ]
}
